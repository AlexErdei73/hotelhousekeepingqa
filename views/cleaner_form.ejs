<%- include("_header") %>
    <h1><%= title %></h1>
    <form action="" method="POST">
        <div class="form-group">
            <label for="first_name" class="form-label">First Name*</label>
            <input type="text" name="first_name" id="first_name" class="form-control" required value="<%- cleaner ? cleaner.first_name : '' %>">
        </div>
        <div class="form-group">
            <label for="last_name" class="form-label">Last Name</label>
            <input type="text" name="last_name" id="last_name" class="form-control" value="<%- cleaner ? cleaner.last_name : '' %>">
        </div>
        <div class="form-group">
            <label for="active" class="form-label">Cleaner Active*</label>
            <select name="active" id="active" class="form-control" value="<%- cleaner ? cleaner.active ? "true" : "false" : "true"%>">
                <option value="true">true</option>
                <option value="false">false</option>
            </select>
        </div>
        <div class="form-group">
            <label for="start_date" class="form-label">Start Date</label>
            <input type="date" placeholder="dd/mm/yyyy" name="start_date" id="start_date" class="form-control" value="<%- cleaner ? cleaner.start_date.toISOString().slice(0,10) : "" %>">
        </div>
        <div class="form-group">
            <label for="end_date" class="form-label">End Date</label>
            <input type="date" placeholder="dd/mm/yyyy" name="end_date" id="end_date" class="form-control" value="<%- cleaner ? cleaner.end_date.toISOString().slice(0,10) : "" %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<%- include("_formerrors") %> 
<%- include("_footer") %>  